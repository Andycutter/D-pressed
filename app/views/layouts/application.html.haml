!!!
%html

  %head
    %meta{content: 'text/html; charset=UTF-8; width=device-width; initial-scale=1', http: {equiv: "Content-Type"}}
    = link_to_unless_current t('english'), locale: "en"
    = link_to_unless_current t('svenska'), locale: "se"    
    %title D-Pressed
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    = javascript_pack_tag 'application'
    = stylesheet_pack_tag 'application'

  %body
    %nav
      = link_to t('new_article'), new_article_path
      = link_to t('registration') , new_user_registration_path
      - if current_user 
        = link_to t('my account'), user_path(current_user)

    .notice
    .alert
    = flash[:notice]
    = flash[:error]
    = yield