= form_with model: @article, remote: false do |form|
  = form.label :title
  %br/
  = form.text_field :title
  %br/
  = form.label :body
  %br/
  = form.text_area :body
  %br/
  = form.label :image
  %br/
  = form.file_field :image
  %br/
  = form.submit 'Create Article'

= link_to 'Back', articles_path